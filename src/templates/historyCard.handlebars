<div id="{{card_id}}" class="card" style="min-width:100%; margin:15px 0; display:None">
    <div class="card-body" style="background-color:#212529;">
        <div class="media">
            <div class="mr-3">
                <canvas id="{{canvas_id}}"></canvas>
            </div>
            <div class="media-body" style="color:white">
                <h5 id="{{item_id}}" class="card-title"></h5>
                <p class="card-text">Some description here...</p>
            </div>
        </div>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item" style="padding:0;">
            <div class="progress" style="height:20px;">
                <div id="{{progress_id}}" class="progress-bar bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                    <span class="progress-text" style="position:absolute; font-size:15px; color:#212529;"></span>
                </div>
            </div>
        </li>
    </ul>
</div>

